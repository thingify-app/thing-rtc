    "@types/sinon": "^9.0.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "esbuild": "^0.17.3",
    "mocha": "^8.2.1",
    "sinon": "^9.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "jose": "^4.1.1",
    "nanoid": "^3.1.22",
    "zod": "^3.24.2"
